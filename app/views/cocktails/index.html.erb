<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://korii.slate.fr/sites/default/files/styles/1440x600/public/elisabeth-pieringer-1355025-unsplash.jpg);">
  <div class="container">
    <h1>Cocktails</h1>
    <p>Les meilleurs cocktails de Londres</p>
  </div>
</div>


<div class="container">
  <div class="row mb-3">
  <% @cocktails.each do |cocktail| %>
    <div class="col-4">
      <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <p class="delete-card">
          <%= link_to cocktail_path(cocktail), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
  </div>

  <h2>Add a cocktail</h2>

  <div class="row justify-content-center">
      <div class="col-6 p-0">
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: "btn btn-primary w-100"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
